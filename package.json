{
  "name": "libyear",
  "version": "0.6.2",
  "description": "A simple measure of software dependency freshness",
  "author": "Joshua David <@jdanil>",
  "contributors": [
    "Jared Beck <@jaredbeck>",
    "Leon Miller-Out <@sbleon>"
  ],
  "license": "LGPL-3.0",
  "homepage": "https://github.com/jdanil/libyear",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdanil/libyear.git"
  },
  "bugs": {
    "url": "https://github.com/jdanil/libyear/issues"
  },
  "main": "./src",
  "bin": "./bin/libyear.js",
  "types": "./src",
  "files": [
    "bin/**/*.d.ts",
    "bin/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.js"
  ],
  "keywords": [
    "debt",
    "dependency",
    "drift",
    "fitness",
    "libyear",
    "outdated"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "audit-ci": "audit-ci --config .auditcirc.json",
    "clean": "tsc --build --clean",
    "compile": "tsc --build",
    "format": "prettier",
    "format:all": "yarn format .",
    "format:diff": "pretty-quick",
    "libyear": "ts-node ./bin/libyear",
    "lint": "eslint --cache",
    "lint:all": "yarn lint \"**/*\"",
    "lint:diff": "eslint-changeset",
    "prepack": "tsc --build --force",
    "prepare": "is-ci || husky install",
    "test": "jest --config .jestrc.json --passWithNoTests",
    "test:ci": "yarn test --ci",
    "test:coverage": "yarn test --coverage",
    "test:precommit": "yarn test --bail --findRelatedTests",
    "test:pull-request": "yarn test:ci --changedSince=\"master\""
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "cosmiconfig": "^7.0.0",
    "date-fns": "^2.19.0",
    "execa": "^5.0.0",
    "lodash": "^4.17.21",
    "mri": "^1.1.6",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@jest/globals": "^26.6.2",
    "@types/lodash": "^4.14.168",
    "@types/mri": "^1.1.0",
    "@types/node": "^14.14.37",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "audit-ci": "^4.0.0",
    "eslint": "^7.23.0",
    "eslint-changeset": "^0.1.5",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "resolutions": {
    "jest-changed-files": "~26.1.0"
  }
}
