{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Schema for .libyearrc",
  "definitions": {
    "optionsDefinition": {
      "type": "object",
      "properties": {
        "overrides": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "defer": {
                "description": "Defer enforcing any limits until the date specified.",
                "default": null,
                "type": "string"
              },
              "drift": {
                "description": "Override drift limit for matching dependencies.",
                "default": null,
                "type": "number"
              },
              "pulse": {
                "description": "Override pulse limit for matching dependencies.",
                "default": null,
                "type": "number"
              },
              "releases": {
                "description": "Override stable releases limit for matching dependencies.",
                "default": null,
                "type": "integer"
              },
              "major": {
                "description": "Override major releases limit for matching dependencies.",
                "default": null,
                "type": "integer"
              },
              "minor": {
                "description": "Override minor releases limit for matching dependencies.",
                "default": null,
                "type": "integer"
              },
              "patch": {
                "description": "Override patch releases limit for matching dependencies.",
                "default": null,
                "type": "integer"
              }
            }
          }
        },
        "limit": {
          "type": "object",
          "properties": {
            "drift": {
              "type": "object",
              "properties": {
                "collective": {
                  "description": "Throws an error if the total drift metric surpasses the limit.",
                  "default": null,
                  "type": "number"
                },
                "individual": {
                  "description": "Throws an error if any individual drift metric surpasses the limit.",
                  "default": null,
                  "type": "number"
                }
              }
            },
            "pulse": {
              "type": "object",
              "properties": {
                "collective": {
                  "description": "Throws an error if the total pulse metric surpasses the limit.",
